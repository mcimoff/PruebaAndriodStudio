<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Seguridad">

        <EditTextPreference
            android:key="edit_email"
            android:selectAllOnFocus="true"
            app:useSimpleSummaryProvider="true"
            android:singleLineTitle="true"
            android:title="E-mail"
            android:visibility="visible"
            tools:visibility="visible" />
        <EditTextPreference
            android:key="edit_password"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Escribí tu nueva contraseña para cambiarla"
            android:title="Cambiar Contraseña"
            android:visibility="visible"
            tools:visibility="visible" />
        <Preference
            app:key="resetPasswordPreference"
            app:title="Show me a Toast"
            android:summary="Hace click acá para cambiar tu contraseña (mensaje de confirmación)."/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Otros">
        <!--<ListPreference
            android:defaultValue="1"
            android:entries="@array/listArrayUserPreferences"
            android:entryValues="@array/listArrayUserPreferences"
            android:key="list_preference_1"
            android:title="Lugar de trabajo"
            app:summary="Marca la opción desde donde estás trabajando" />-->
        <ListPreference
            app:defaultValue="@string/dark_mode_def_value"
            app:entries="@array/dark_mode_entries"
            app:entryValues="@array/dark_mode_values"
            app:key="@string/dark_mode"
            app:title="@string/dark_mode"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>