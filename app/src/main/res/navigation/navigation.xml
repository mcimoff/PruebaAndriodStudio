<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/fragment1">
    <fragment
        android:id="@+id/fragment1"
        android:name="com.example.myapplication.Fragment1"
        android:label="fragment_1"
        tools:layout="@layout/fragment_1" >
        <action
            android:id="@+id/action_fragment1_to_fragment2"
            app:destination="@id/fragment2"
            app:popUpTo="@id/fragment1"
            app:popUpToInclusive="true" />
        <argument
            android:name="indexID"
            app:argType="string" />
        <action
            android:id="@+id/action_fragment1_to_fragment3"
            app:destination="@id/fragment3"
            app:popUpTo="@id/fragment1"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.myapplication.Fragment2"
        android:label="fragment_2"
        tools:layout="@layout/fragment_2" >
        <argument
            android:name="programsid"
            app:argType="string" />
        <action
            android:id="@+id/action_fragment2_to_fragment1"
            app:destination="@id/fragment1"
            app:popUpTo="@id/fragment2"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragment3"
        android:name="com.example.myapplication.Fragment3"
        android:label="fragment_3"
        tools:layout="@layout/fragment_3" >
        <argument
            android:name="contenidoID"
            app:argType="string" />
        <action
            android:id="@+id/action_fragment3_to_fragment1"
            app:destination="@id/fragment1"
            app:popUpTo="@id/fragment3"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_fragment3_to_fragment4"
            app:destination="@id/fragment4"
            app:popUpTo="@id/fragment3"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_fragment3_to_fragment5"
            app:destination="@id/fragment5"
            app:popUpTo="@id/fragment3"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragment4"
        android:name="com.example.myapplication.Fragment4"
        android:label="fragment_4"
        tools:layout="@layout/fragment_4" >
        <action
            android:id="@+id/action_fragment4_to_fragment3"
            app:destination="@id/fragment3"
            app:popUpTo="@id/fragment4"
            app:popUpToInclusive="true" />
        <argument
            android:name="incidenteID"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/fragment5"
        android:name="com.example.myapplication.Fragment5"
        android:label="fragment_5"
        tools:layout="@layout/fragment_5" >
        <argument
            android:name="altaID"
            app:argType="string" />
        <action
            android:id="@+id/action_fragment5_to_fragment3"
            app:destination="@id/fragment3"
            app:popUpTo="@id/fragment5"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>